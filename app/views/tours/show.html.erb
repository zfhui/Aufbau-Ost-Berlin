<div class="container">
  <div id="map" style='width: 100%; height: 450px;'></div>
</div>

<div class="container section-container-first">
  <div class="section-head">
    <h3>Tour <%= @tour.name %></h3>
  </div>

<% if current_user %>
  <div class="section-text-last">
    <p>
      <%= link_to 'Bearbeiten', edit_tour_path(@tour) %> |
      <%= link_to 'Löschen', @tour, method: :delete, data: { confirm: 'Bist du dir sicher?' } %>
    </p>
  </div>
<% end %>

  <div class="section-text">
    <p><%= @tour.description %></p>
  </div>
</div>

<% @buildings.each do |b|%>
  <div class="container section-container">
    <div class="section-head">
      <h4><%= b.name %></h4>
    </div>

    <div class="section-text">
      <p>Lorem Ipsum ...</p>
    </div>
  </div>
<% end %>

<div class="container section-container">
  <div class="section-text-last">
    <%= link_to 'Zurück zur Liste der Touren', tours_path %>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    buildMap(<%= raw @hash.to_json %>);
  </script>
<% end %>
