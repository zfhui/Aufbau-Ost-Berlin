<div class="container chapter-container">
  <div class="chapter-head">
    <h3>Touren</h3>
  </div>
  <div class="chapter-text">
    <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta.</p>
  </div>
  <!--//about this site---->

  <% @tours.each do |tour| %>
    <div class="section-container">
      <div class="row">
        <!-- tour cover -->
        <div class="col-xs-12 col-sm-4">
          <div class="section-image">
            <img src="<%=tour.image_path%>" class="img-responsive" alt='<%="#{tour.name}-Tour-Cover"%>'>
          </div>
        </div>
        <!-- tour info -->
        <div class="col-xs-12 col-sm-8">
          <div class="section-head">
            <h4><%= tour.name %></h4>
            <% if current_user %>
              <p>
                <%= link_to 'Anzeigen', tour %> |
                <%= link_to 'Bearbeiten', edit_tour_path(tour) %> |
                <%= link_to 'LÃ¶schen', tour, method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
            <% end %>
          </div>

          <div class="section-text">
            <p class="section-subtext">
              <%= tour.description.truncate(250, seperator: /\w/).html_safe %>
            </p>
            <p class="text-right">
              <%= link_to tour_path(tour) do%>
                <span class="glyphicon glyphicon-link"></span>
                Zur Tour
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if current_user %>
  <div class="container importer-container">
    <p><%= link_to 'Neue Tour', new_tour_path %></p>
  </div>
<% end %>
