<p id="notice"><%= notice %></p>
<div class="container chapter-container">
  <!-- about this site -->
  <div class="chapter-head">
    <h3><%= @index_cards.count %> Karteikarten</h3>
  </div>
  <!--//about this site---->

  <div class="section-container">
    <div class="section-header">
    </div>

    <div class="section-text">
      <div class="image-grid">
        <% @index_cards.each do |index_card| %>
          <div class="image-grid-item" %>
            <img src="<%=index_card.url_s%>" alt="<%= index_card.filename%>" />
          </div>
        <% end %>
      </div>
    </div>

    <div class="section-text">
      <div id="infitite-scrolling">
        <%= paginate @index_cards %>
      </div>
    </div>
  </div>
</div>

<% if current_user %>
  <div class="container importer-container">
    <p><%= link_to 'Neue Karteikarte', new_index_card_path %></p>
    <p>Karteikarte importieren</p>
    <p>
      <%= form_tag import_index_cards_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag 'Importieren'%>
      <% end %>
    </p>
</div>
<% end %>

<script type="text/javascript">
  $(".image-grid").gridalicious({
    animate: true,
    selector: '.image-grid-item'
  });
</script>
