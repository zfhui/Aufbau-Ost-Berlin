<div class="chapter-container">
  <div class="chapter-head">
    <h3>Log in</h3>
  </div>

  <div class="chapter-text">
    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}, wrapper: :horizontal_form do |f| %>
      <%= f.input :email, as: 'email', autofocus: true %>
      <%= f.input :password, as: 'password', autocomplete: "off" %>

      <% if devise_mapping.rememberable? -%>
        <div class="text-center">
          <%= f.input :remember_me, as: 'boolean', label: "Remember me?" %>
        </div>
      <% end -%>

      <%= f.button :submit, "Log in", class: "center-block btn btn-primary" %>
    <% end %>
  </div>
</div>
