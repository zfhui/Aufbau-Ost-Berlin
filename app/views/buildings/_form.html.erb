    <%= f.text_field :grossstadt_url, class: "col-sm-8 col-md-8 col-lg-8"%>
  </div>

  <div class="form-group">
    <%= f.label "Andre URLs: ", class: "col-sm-3 col-md-3 control-label"%>
    <%= f.text_field :other_urls, class: "col-sm-8 col-md-8 col-lg-8"%>
