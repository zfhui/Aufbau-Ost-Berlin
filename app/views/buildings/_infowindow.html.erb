<div id='<%="building-#{object.id}"%>' class="marker-infowindow">
  <table class="table table-responsive table-condensed">
    <caption><%= object.name %></caption>
    <tbody>
      <tr>
        <td width="150px">
          <% if object.photos.first %>
            <img src="<%= object.photos.first.path_150px %>" width="150px" height="150px">
          <% end %>
        </td>
        <td width="200px">
          <p>
            <strong>Baujahr: </strong><%=object.built_dates_str%>
          </p>
          <p>
            <strong>Architekt(en): </strong><%="#{object.architects_str}".truncate(30, seperator: /\w/)%>
          </p>
          <p>
            <strong>Beschreibung: </strong><%=object.description_short%>
            <%= link_to building_path(object) do %>
              <span class="glyphicon glyphicon-link"></span> Details
            <% end %>
          </p>
        </td>
      </tr>
    </tbody>
  </table>
</div>
