<div class="container">
  <div id="map" style='width: 100%; height: 450px;'></div>
</div>

<!-- about this site -->
<div id="building-title" class="site">
  <div class="container">
    <div class="section-head text-center">
      <h3><span class="first"> </span><%= @buildings.count %> GEBÄUDE<span class="second"></span></h3>
      <p class="text-left">Kick auf den Namen des Gebäudes, um es auf der Karten anzuzeigen.</p>
    </div>
  </div>
  <div class="clearfix"> </div>
</div>
<!--//about this site---->

<div class="container-text">
  <% @buildings.each do |b| %>
    <div class="col-xs-12 col-sm-4 col-lg-3">
      <div class="building-shortinfo">
        <p><%= b.name %></p>
        <p><%= "#{b.street_name} #{b.house_no}" %><p>
        <p><%= "#{b.zipcode} #{b.city}" %><p>
        <p class="text-right"><%= link_to "Details", building_path(b) %></p>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>
</div>

<% if current_user %>
  <div id="buildings-importer" class="importer">
    <div class="container-text">
      <div><%= link_to 'New Building', new_building_path %></div>
      <div class="container-title">Import Buildings</div>
      <div>
        <%= form_tag import_buildings_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag 'Import'%>
        <% end %>
      </div>
    </div>
    <div class="clearfix"> </div>
  </div>
<% end %>

<% content_for :javascript do %>
  <script type="text/javascript">
    buildMap(<%= raw @hash.to_json %>);
  </script>
<% end %>
