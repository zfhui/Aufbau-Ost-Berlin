<div class="container">
  <div id="building-map" style='width: 100%; height: 450px;'></div>
</div>

<div class="container chapter-container">
  <div class="row">
    <div class="col-xs-1 text-left">
      <%= link_to building_path(prev_building(@building.id)), title: " Zum vorherigen Gebäude" do%>
        <span class="glyphicon glyphicon-chevron-left chapter-prev"></span>
      <% end %>
    </div>

    <div class="col-xs-9 col-sm-10">
      <div class="chapter-head">
        <h3><%= @building.name %></h3>

        <div class="col-xs-12">
          <% if current_user %>
            <p>
              <%= link_to 'Bearbeiten', edit_building_path(@building) %> |
              <%= link_to 'Löschen', @building, method: :delete, data: { confirm: 'Bist du dir sicher?' } %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

      <div class="col-xs-1 text-right">
      <%= link_to building_path(next_building(@building.id)), title: "Zum nächsten Gebäude" do %>
        <span class="glyphicon glyphicon-chevron-right chapter-next"></span>
      <% end %>
    </div>
  </div>

  <div class="section-container">
    <div class="section-text">
      <table class="table table-condensed">
        <tbody>
          <tr>
            <td>
              <span class="info">Adresse:</span>
            </td>
            <td>
              <%= "#{@building.street_name} #{@building.house_no}, #{@building.zipcode} #{@building.city}" %>
            </td>
          </tr>
          <tr>
            <td>
              <span class="info">Architekt(en):</span>
            </td>
            <td>
              <%= architects_to_str(@building) %>
            </td>
          </tr>
          <tr>
            <td>
              <span class="info">Bauzeit: </span>
            </td>
            <td>
              <%= built_dates_to_str(@building) %>
            </td>
          </tr>

          <% if external_urls_to_str(@building).present? %>
            <tr>
              <td>
                <span class="info">Externe Links: </span>
              </td>
              <td>
                <%= external_urls_to_str(@building) %>
              </td>
            </tr>
          <% end %>
          <% if current_user %>
            <tr>
              <td>
                <span class="info">Kommentare: </span>
              </td>
              <td>
                <em><%= @building.comments %></em>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="chapter-text">
    <p><%= raw @building.description %></p>
    <% if @building.tour %>
      <p>Dieses Gebäude gehört zur Tour <%= link_to @building.tour.name, tour_path(@building.tour) %>.</p>
    <% end %>
  </div>
</div>

<div class="container photo-container">
  <div class="row">
    <% @photos.each do |p| %>
      <div class="col-xs-12 col-sm-4 col-md-3" %>
        <a href='<%= p.path %>' class="swipebox" title="<%=@building.name%>">
          <img src='<%= p.path_250px %>' class='img-responsive' alt='<%="#{p.index_card_no}+#{p.photo_no}"%>'>
        </a>
        <p class="byline">Foto: <%= p.photographer %>, <%=p.year%></p>
      </div>
    <% end %>
  </div>
</div>

<% if !@building.video_url.empty? %>
  <div class="container chapter-container">
    <div class="section-container">
      <% if !@building.video_description.empty? %>
        <div class="section-text">
          <p><%=@building.video_description%></p>
        </div>
      <% end %>

      <div class="video-container">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embeded-responsive-item" src="<%=@building.video_url%>" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container chapter-container">
  <div class="section-container">
    <div class="section-text">
      <%= link_to buildings_path do %>
        <span class="glyphicon glyphicon-th-list"></span> Zur Liste der Gebäude
      <% end %>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'building-map'}}, function(){
      markers = handler.addMarkers([
        {
          "lat": "<%= @building.latitude %>",
          "lng": "<%= @building.longitude %>",
          "infowindow": "<%= @building.name %>"
        }
      ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(14);
    });
  </script>
<% end %>
