<% building = @buildings.first %>

<div id="building-info" class="col-xs-12">
  <div class="col-xs-12 container-title"><%= building.name %></div>

  <% if current_user %>
    <div class="col-xs-12">
      <%= link_to 'Anzeigen', building %> |
      <%= link_to 'Bearbeiten', edit_building_path(building) %> |
      <%= link_to 'Löschen', building, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

  <div class="col-sx-12 col-sm-4">
    <% if p = building.photos.first %>
      <img src='<%=p.path%>' class="img-responsive">
    <% end %>
  </div>

  <div class="col-sx-12 col-sm-8">
    <p>
      <strong>Tour: </strong>
        <% if building.tour %>
          <%= building.tour.name %>
        <% end %>
    </p>
    <p><strong>Geolocation: </strong><%= "#{building.latitude}, #{building.longitude}"%></p>
    <p><strong>Architekt(en): </strong><%= building.architects_str %></p>
    <p><strong>Baujahr: </strong><%= building.built_dates_str %></p>
    <p><strong>Beschreibung: </strong><%= building.description %></p>
    <p><strong>Externe Links: </strong></p>
    <p>
      <%= url_html(building.wiki_url, "Wikipedia") %>
      <%= url_html(building.wiki_common_url, "Wikimedia Common") %>
      <%= url_html(building.denkmalliste_url, "Denkmalliste") %>
      <%= url_html(building.grossstadt_url, "Großstadt") %>
      <%= url_html(building.other_url, "Link 1") %>
      <%= url_html(building.other_url_2, "Link 2") %>
    </p>
  </div>
  <div class="clearfix"></div>
</div>
