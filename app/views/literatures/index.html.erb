<div class="container chapter-container">
  <div class="chapter-head">
    <h3><%= @literature.title %></h3>
  </div>
  <div class="chapter-text">
    <%= @literature.content %>
  </div>

  <% @literature.books.each do |book| %>
    <%= render partial: 'literature', locals: { book: book } %>
  <% end %>
</div>
