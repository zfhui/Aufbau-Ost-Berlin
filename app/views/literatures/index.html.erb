<!--//about this site---->
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Published at</th>
      <th>Publisher</th>
      <th>Year</th>
      <th>Cover file</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @literatures.each do |literature| %>
      <tr>
        <td><%= literature.author %></td>
        <td><%= literature.title %></td>
        <td><%= literature.subtitle %></td>
        <td><%= literature.published_at %></td>
        <td><%= literature.publisher %></td>
        <td><%= literature.year %></td>
        <td><%= literature.cover_file %></td>
        <td><%= literature.url %></td>
        <td><%= link_to 'Show', literature %></td>
        <td><%= link_to 'Edit', edit_literature_path(literature) %></td>
        <td><%= link_to 'Destroy', literature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Literature', new_literature_path %>
<% end %>
