<!-- about this site -->
<div id="literatures-liste" class="literature-list">
  <% @literatures.each do |literature| %>
    <div class="container container-text">
      <div class="container-title">
        <div class="container-maintitle">
          <%= literature.title %>
        </div>
        <div class="container-subtitle">
          <%= literature.subtitle %>
        </div>
      </div>
      <div>
        <% if current_user %>
          <%= link_to 'Anzeigen', literature %> |
          <%= link_to 'Bearbeiten', edit_literature_path(literature) %> |
          <%= link_to 'LÃ¶schen', literature, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-2">
        <img src='<%= image_url("bookcovers/#{literature.cover_file}")%>' class="img-responsive">
      </div>
      <div class="col-xs-12 col-sm-10">
        <p><strong>Autor(ren): </strong><%= literature.author %></p>
        <p><strong>Verlag: </strong><%= literature.publisher %></p>
        <p><strong>Erscheinungsjahr: </strong><%= literature.year %></p>
        <p><strong>Verlagsort: </strong><%= literature.published_at %></p>
        <p><%= link_to "Buch kaufen", literature.url%></p>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>
</div>
