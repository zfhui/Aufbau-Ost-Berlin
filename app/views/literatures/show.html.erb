<div class="container chapter-container">
  <div class="chapter-head">
    <h3><%= @literature.title %></h3>
    <% if current_user %>
      <p>
        <%= link_to 'Bearbeiten', edit_literature_path(@literature) %> |
        <%= link_to 'Löschen', @literature, method: :delete, data: { confirm: 'Bist du dir sicher?' } %>
      </p>
    <% end %>
  </div>

  <div class="chapter-text">
    <p>
      <strong>Subtitle:</strong>
      <%= @literature.subtitle %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @literature.author %>
    </p>

    <p>
      <strong>Published at:</strong>
      <%= @literature.published_at %>
    </p>

    <p>
      <strong>Publisher:</strong>
      <%= @literature.publisher %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @literature.year %>
    </p>

    <p>
      <strong>Cover file:</strong>
      <%= @literature.cover_file %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= @literature.url %>
    </p>
  </div>

  <div class="section-container">
    <div class="section-text">
      <%= link_to 'Zurück zur Liste der Literaturen', literatures_path %>
    </div>
  </div>
</div>
